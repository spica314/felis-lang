#!/bin/bash

REPOSITORY_PATH=$(git rev-parse --show-toplevel)

git stash save -k

cd $REPOSITORY_PATH/neco-rs

cargo fmt --all -- --check

if [ $? -ne 0 ]; then
    git stash pop
    echo -e "\033[31;1mpre-commit failed: cargo fmt\033[m"
    exit 1
fi

cargo nextest run --offline

if [ $? -ne 0 ]; then
    git stash pop
    echo -e "\033[31;1mpre-commit failed: cargo test\033[m"
    exit 1
fi

cargo llvm-cov nextest --fail-under-lines 75 --open

if [ $? -ne 0 ]; then
    git stash pop
    echo -e "\033[31;1mpre-commit failed: line coverage < 75%\033[m"
    exit 1
fi

git stash pop
echo -e "\033[32;1mpre-commit: success\033[m"
exit 0
